{
  "name": "slate-automerge-doc",
  "version": "0.1.0",
  "description": "Syncs slate with an automerge document. Bring your own transport.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "source": "src/index.ts",
  "scripts": {
    "prepublishOnly": "npm-run-all build",
    "format": "prettier -w 'src/**/*.(ts|tsx)'",
    "build": "node build.js",
    "watch": "node build.js --watch",
    "test": "jest --silent=false",
    "test-dev": "jest --watch --silent=false"
  },
  "keywords": [
    "slate",
    "automerge",
    "sync",
    "collaboration",
    "crdt"
  ],
  "author": "phlmn <info@philipp-mandler.com>",
  "license": "AGPL-3.0-only",
  "dependencies": {
    "@automerge/automerge": "^2.0.3",
    "chokidar": "^3.5.3",
    "prettier": "^2.8.7"
  },
  "devDependencies": {
    "esbuild": "^0.17.17",
    "esbuild-jest": "^0.5.0",
    "fast-glob": "^3.2.12",
    "jest": "^29.5.0",
    "npm-run-all": "^4.1.5",
    "slate": "^0.91.0",
    "ts-morph": "^18.0.0"
  },
  "peerDependencies": {
    "slate": ">=0.91.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "esbuild-jest"
    },
    "modulePathIgnorePatterns": ["<rootDir>/lib/"]
  }
}
